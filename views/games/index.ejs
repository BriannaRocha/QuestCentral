<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <h1>The Ultimate Gamer Series! ðŸŽ®</h1>
  <a 
    href="/games/new" 
  >
    Add Video Game
  </a>
  <table id="list">
    <thead>
      <tr>
        <th>Game:</th>
        <th>Status:</th>
        <th>Platform:</th>
        <th>Notes:</th>
      </tr>
    </thead>
    <tbody>
      <% games.forEach((game) => { %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.status %></td>
        <td><%= game.platform %></td>
        <td><a href="/games/<%= game._id %>">Game Details</a></td>
        <td>
          <form 
            action="/games/<%= game._id %>?_method=DELETE"
            method="POST"
          >
            <button type="submit">X</button>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</main>

