        <option value="LAX">LAX</option>
        <option value="DEN" selected>DEN</option>
        <option value="SAN">SAN</option>
      </select>
      <label for="flightNo-select">Flight Number:</label>
      <input 
        type="number"
        name="flightNo" 
        id="flightNo-select"
        min="10"
        max="9999"
      >
      <label for="departs-input">Departs:</label>
      <input 
        type="datetime-local"
        name="departs" 
        id="departs-input"
      >
      <button type="submit">Save Flight</button>
    </form>
