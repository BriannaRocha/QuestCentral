<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (user) { %>
    <div class="content-box">
    <h2>Add a Video Game! ðŸ‘¾</h2>
      <form id="new-form" action="/games" method="POST">
        <label>
          Game Title: 
          <input type="text" name="name" autocomplete="off">
        </label>
        <br>
        <br>
        <label for="status-select">Status:</label>
        <select name="status" id="status-select">
          <option value="Interested">Interested</option>
          <option value="Currently Playing" selected>Currently Playing</option>
          <option value="Completed">Completed</option>
        </select>
        <br>
        <br>
        <label for="completedDate-input">Completed Date:</label>
        <input 
          type="date"
          name="completedDate" 
          id="completedDate-input"
        >
        <br>
        <br>
        <label for="platform-select">Platform:</label>
        <select name="platform" id="platform-select">
          <option value="Mobile">Mobile</option>
          <option value="Nintendo">Nintendo</option>
          <option value="PC" selected>PC</option>
          <option value="Playstation">Playstation</option>
          <option value="Xbox">Xbox</option>
          <option value="Other">Other</option>
        </select>
        <br>
        <br>
        <button type="submit">Save Game</button>
      </form>
    </div>
  <% } %>
</main>

<%- include('../partials/footer') %>