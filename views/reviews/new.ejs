<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div>
    <img 
      class="profile-avatar"
      src="<%= game.owner.avatar %>" 
      alt="<%= game.owner.name %>'s avatar"
    >
  </div>
  <% if (isSelf) { %>
    <h2>Add a Review for <%= game.name %>!</h2>
    <form id="new-form" action="/reviews" method="POST">
      <input type="hidden" name="game" value="<%= game._id %>">
      <label>
        Would you recommend this video game to others?
        <input 
          type="checkbox" 
          name="recommended" 
        >
      </label>
      <br />
      <label for="content-select">Please describe what you liked or disliked from this game!</label>
      <textarea name="content" rows="5"></textarea><br>
      <br />
      <label for="rating-select">On a scale of 1-10, what would you rate this game?</label>
      <input 
        type="number"
        name="rating" 
        id="rating-select"
        min="1"
        max="10"
      >
      <br />
      <button type="submit">Save Review</button>
    </form>
  <% } %>
</main>

<%- include('../partials/footer') %>