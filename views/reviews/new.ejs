<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <div class="content-box">
  <div>
      <img 
        class="profile-avatar"
        src="<%= game.owner.avatar %>" 
        alt="<%= game.owner.name %>'s avatar"
      >
    </div>
    <% if (isSelf) { %>
      <h2>Add a Review for <%= game.name %>!</h2>
      <form id="new-form" action="/reviews" method="POST">
        <input type="hidden" name="game" value="<%= game._id %>">
        <label>
          Would you recommend this video game to others?
          <input 
            type="checkbox" 
            name="recommended" 
          >
        </label>
        <br>
        <br>
        <label for="content-select">Please describe what you liked or disliked about this game:</label>
        <br>
        <br>
        <textarea name="content" rows="7" cols="55"></textarea><br>
        <br>
        <label for="rating-select">On a scale of 1-10, what would you rate this game?</label>
        <select name="rating" id="rating-select">
          <% for (let i = 1; i <= 10; i++) { %>
          <option value="<%= i %>"> <%= i %></option>
          <% } %>
        </select>
        <br>
        <br>
        <br>
        <button type="submit">Save Review</button>
      </form>
    <% } %>
  </div>
</main>

<%- include('../partials/footer') %>